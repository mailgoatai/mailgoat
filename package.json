{
  "name": "mailgoat",
  "version": "1.1.8",
  "description": "Email for AI agents, built by AI agents. CLI-first email provider using Postal.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mailgoat": "./bin/mailgoat.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "test": "npm run test:integration",
    "test:unit": "jest src",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:bash": "bash tests/test-runner.sh",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "bench": "ts-node benchmarks/run-all.ts",
    "bench:startup": "ts-node benchmarks/cli-startup.bench.ts",
    "bench:config": "ts-node benchmarks/config-loading.bench.ts",
    "bench:send": "ts-node benchmarks/send-throughput.bench.ts",
    "bench:memory": "node --expose-gc -r ts-node/register benchmarks/memory-usage.bench.ts",
    "admin:api": "node dashboard/admin-api/server.js",
    "admin:ui:install": "npm --prefix admin-ui install",
    "admin:ui:build": "npm --prefix admin-ui run build",
    "admin:ui:dev": "npm --prefix admin-ui run dev",
    "admin:serve": "node dist/index.js admin serve --port 3001"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mailgoatai/mailgoat.git"
  },
  "homepage": "https://mailgoat.ai",
  "bugs": {
    "url": "https://github.com/mailgoatai/mailgoat/issues"
  },
  "keywords": [
    "email",
    "cli",
    "postal",
    "ai-agents",
    "agent-email",
    "automation",
    "mailserver",
    "smtp",
    "imap"
  ],
  "author": "MailGoat AI Team <team@mailgoat.io>",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^5.0.6",
    "@types/express-session": "^1.18.2",
    "axios": "^1.6.5",
    "better-sqlite3": "^12.6.2",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "commander": "^12.0.0",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.19.0",
    "file-type": "^16.5.4",
    "handlebars": "^4.7.8",
    "mime-types": "^3.0.2",
    "mysql2": "^3.15.3",
    "prom-client": "^15.1.3",
    "prompts": "^2.4.2",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "winston": "^3.19.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@jest/globals": "^30.2.0",
    "@types/benchmark": "^2.1.5",
    "@types/better-sqlite3": "^7.6.13",
    "@types/handlebars": "^4.0.40",
    "@types/jest": "^30.0.0",
    "@types/mime-types": "^3.0.1",
    "@types/nock": "^10.0.3",
    "@types/node": "^20.19.33",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "autocannon": "^8.0.0",
    "benchmark": "^2.1.4",
    "clinic": "^13.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "nock": "^14.0.11",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.15.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "bin/",
    "README.md",
    "LICENSE"
  ]
}
