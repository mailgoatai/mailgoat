# Postal Configuration
POSTAL_SERVER_URL=https://postal.example.com
POSTAL_API_KEY=your_postal_api_key_here
FROM_EMAIL=monitor@yourdomain.com
ALERT_EMAIL=admin@yourdomain.com

# Monitoring Configuration
CHECK_INTERVAL=60000          # Check interval in milliseconds (60000 = 1 minute)
ALERT_COOLDOWN_MS=300000      # Cooldown between alerts in ms (300000 = 5 minutes)

# Alert Thresholds (percentage)
THRESHOLD_CPU=80              # CPU usage threshold
THRESHOLD_MEMORY=85           # Memory usage threshold
THRESHOLD_DISK=90             # Disk usage threshold
THRESHOLD_TEMP=80             # CPU temperature threshold (optional, in Celsius)

# Logging
LOG_LEVEL=info                # Log level: error, warn, info, debug

# Optional: Hostname override
HOSTNAME=my-server
