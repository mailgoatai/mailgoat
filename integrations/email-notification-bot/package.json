{
  "name": "mailgoat-notification-bot",
  "version": "1.0.0",
  "description": "Production-ready system monitoring bot that sends email alerts via MailGoat/Postal",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "docker:build": "docker build -t mailgoat-notification-bot .",
    "docker:run": "docker run --env-file .env mailgoat-notification-bot"
  },
  "keywords": [
    "mailgoat",
    "postal",
    "monitoring",
    "alerts",
    "email",
    "ai-agent"
  ],
  "author": "MailGoat Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "prom-client": "^15.1.0",
    "winston": "^3.11.0",
    "systeminformation": "^5.21.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0",
    "vitest": "^1.0.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
